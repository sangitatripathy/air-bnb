<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Create Your Account</h1>
      <form action="/signup" method="POST" class="max-w-md mx-auto">
        <%- include('../partials/errors') %>
        <input
          type="text"
          name="firstname"
          placeholder="Enter your Firstname"
          value="<%= oldInput.firstname || '' %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/>
        <input
          type="text"
          name="lastname"
          placeholder="Enter your LastName"
          value="<%= oldInput.lastname || '' %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="email"
          name="email"
          placeholder="Enter your Email"
          value="<%= oldInput.email || '' %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/>
        <input
          type="password"
          name="password"
          placeholder="Enter your Password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/>
        <input
          type="password"
          name="confirmPassword"
          placeholder="Confirm your Password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/>
        <div class="mb-4">
          <p>User Type</p>
          <label>
            <input type="radio" name="usertype" value="guest" class="mr-2"
              <%= oldInput.usertype === 'guest' ? 'checked' : '' %> />
            <span>Guest</span>
          </label>
          <label>
            <input type="radio" name="usertype" value="host" class="mr-2"
              <%= oldInput.usertype === 'host' ? 'checked' : '' %> />
            <span>Host</span>
          </label>
        </div>
        <div class="mb-4">
          <input type="checkbox" name="terms" id="terms" class="mr-2" required />
          <label for="terms">I agree to the terms and conditions</label>
        </div>
        <input type="submit" value="Sign up" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      </form>
    </main>
  </body>
</html>