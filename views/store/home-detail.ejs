<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Home Details
    </h2>
    <div class="flex flex-row gap-8 items-start">
      <div class="card bg-gray-100 shadow-md rounded-lg p-6">
        <img
          src="<%= home.photoUrl %>"
          alt="<%= home.houseName %>"
          class="w-full h-64 object-cover rounded-lg mb-4"
        />
      </div>

      <!-- Description Section -->
      <div class="w-1/3">
        <h3 class="text-2xl font-bold text-gray-800 mb-2">
          <%= home.houseName %>
        </h3>
        <p class="text-gray-600 mb-2">
          <strong>Location:</strong> <%= home.location %>
        </p>
        <p class="text-gray-600 mb-2">
          <strong>Price:</strong> ₹<%= home.price %>
        </p>
        <p class="text-gray-600 mb-2">
          <strong>Rating:</strong> <%= home.rating %> ⭐
        </p>

        <div class="flex space-x-4 mt-4">
          <a
            href="/book-home/<%= home._id %>"
            class="inline-block bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600"
          >
            Book Now
          </a>
          <%- include('../partials/favourite') %>
        </div>
      </div>
    </div>
      
    </div>
  </main>
</body>
